@page
@model CartModel


<h2> Alışveriş sepeti</h2>

<div class="container mt-5">
    <h1 class="text-center mb-4 fw-bold">Sepetim</h1>

    @if (!Model.Cart.Items.Any())
    {
        <div class="alert alert-warning text-center" role="alert">
            Sepetinizde ürün bulunmamaktadır.
        </div>
    }
    else
    {
        <div class="row">
            <!-- Ürün Listesi -->
            <div class="col-md-8">
                @foreach (var item in Model.Cart.Items)
                {
                    <div class="card mb-3 shadow-sm cart-item">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="@*@item.ProductImage*@" class="img-fluid rounded-start cart-item-image" alt="@*@item.ProductName*@">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Product.Name</h5>
                                    <p class="card-text text-muted">@item.Product.Description</p>
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <span class="fw-bold">@item.Product.Price.ToString("C")</span>
                                            <div class="mt-2">
                                                <button class="btn btn-outline-secondary btn-sm">-</button>
                                                <span class="mx-2">@item.Quantity</span>

                                                <span>@(item.Quantity * item.Product.Price).ToString()</span>
                                                <button class="btn btn-outline-secondary btn-sm">+</button>
                                            </div>
                                        </div>
                                        <button class="btn btn-danger btn-sm">Sil</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Sipariş Özeti -->
            <div class="col-md-4">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title fw-bold">Sipariş Özeti</h5>
                        <ul class="list-group list-group-flush mb-3">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Ara Toplam:</span>
                                <span>@Model.Cart.CalculateTotal().ToString("C")</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Kargo Ücreti:</span>
                                <span>₺</span>
                            </li>
                            <li class="list-group-item d-flex justify-content-between fw-bold">
                                <span>Genel Toplam:</span>
                                <span>@Model.Cart.CalculateTotal().ToString("C")</span>
                            </li>
                        </ul>
                        <button class="btn btn-primary w-100">Ödeme Yap</button>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .cart-item {
        border: none;
    }

    .cart-item-image {
        object-fit: cover;
        height: 150px;
    }

    .btn-outline-secondary:hover {
        background-color: #007bff;
        color: white;
    }

    .card-title {
        font-size: 1.2rem;
    }

    .fw-bold {
        font-weight: 600;
    }

    .btn-danger {
        background-color: #dc3545;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }
</style>
